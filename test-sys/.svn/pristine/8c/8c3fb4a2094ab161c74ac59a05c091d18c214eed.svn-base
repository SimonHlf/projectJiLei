			model.setPid(list.get(i).getPid().toString());
			model.setName(list.get(i).getName());
			listZtree.add(model);
		}
		String ss=JSON.toJSONString(listZtree);
		mm.put("nodes", ss.replaceAll("icon", "_icon_"));
