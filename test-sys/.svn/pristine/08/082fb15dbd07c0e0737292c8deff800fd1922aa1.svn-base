<%@page pageEncoding="utf-8" %>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<div class="col-lg-6 col-sm-12 col-xs-12">
    <div class="widget">
        <div class="widget-header bordered-bottom bordered-themeprimary">
            <i class="widget-icon fa fa-tasks themeprimary"></i>
            <span class="widget-caption themeprimary">近半年最高分最低分比较</span>
            <p style="text-align:center;line-height:33px;"><%--近半年最高分最低分比较--%></p>
        </div>
        <!--Widget Header-->
        <div class="widget-body">
            <div class="widget-main no-padding">
                <div id="BarEcharts" style="width: 600px; height: 400px;">

                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-6 col-sm-12 col-xs-12">
    <div class="widget">
        <div class="widget-header bordered-bottom bordered-themeprimary">
            <i class="widget-icon fa fa-tasks themeprimary"></i>
            <span class="widget-caption themeprimary">达标分析统计图</span>
            <p style="text-align:center;line-height:33px;"><%--达标分析统计图--%></p>
        </div>
        <!--Widget Header-->
        <div class="widget-body">
            <div class="widget-main no-padding">
                <div id="PieEcharts" style="width: 600px; height: 400px;">

                </div>
            </div>
        </div>
    </div>
</div>
<div class="widget-body">
    <div class="flip-scroll">
        <table class="table table-bordered table-striped table-condensed flip-content">
            <thead class="flip-content bordered-palegreen">
            <tr>
                <th>考试名称</th>
                <th>所属机构</th>
                <th>试卷名称</th>
                <th>应考人数(人)</th>
                <th>开始考试时间</th>
                <th>结束考试时间</th>
            </tr>
            </thead>
            <tbody>
            <c:forEach items="${examList}" var="exam">
                <tr>
                    <td>${exam.exam_name}</td>
                    <td>${exam.orgName}</td>
                    <td>${exam.creatName}</td>
                    <td>${exam.AnswerTOTAL}</td>
                    <td>${exam.start_time}</td>
                    <td>${exam.end_time}</td>
                </tr>
            </c:forEach>

            </tbody>
        </table>
    </div>
</div>
<script>
    //饼形图
    $(function(){
        var myChart = echarts.init(document.getElementById('PieEcharts'));
        option = {
            title : {
                text: '及格率统计',
                x:'center'
            },
            tooltip : {
                trigger: 'item',
                formatter: "{a} <br/>{b} : {c} ({d}%)"
            },
            legend: {
                orient: 'vertical',
                left: 'left',
                data: ['及格','不及格']
            },
            series : [
                {
                    name: '及格率',
                    type: 'pie',
                    radius : '55%',
                    center: ['50%', '60%'],
                    data:[
                        {value:'${pass}', name:'及格'},
                        {value:'${fail}', name:'不及格'}
                    ],
                    itemStyle: {
                        emphasis: {
                            shadowBlur: 10,
                            shadowOffsetX: 0,
                            shadowColor: 'rgba(0, 0, 0, 0.5)'
                        }
                    }
                }
            ]
        };
        myChart.setOption(option);
    })

    //柱状图
